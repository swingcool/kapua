<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
    logicalFilePath="KapuaDB/athz_sys-service-event-housekeeping-seed-0.3.0.xml">

    <changeSet id="changelog-authorization-0.3.0_sysServiceEventHousekeeping"
        author="eurotech">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sys_service_event_housekeeping" />
            </not>
        </preConditions>
        <createTable tableName="sys_service_event_housekeeping">
            <column name="service" type="varchar(64)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="last_run_on" type="timestamp(3)" />
            <column name="last_run_by" type="varchar(64)" />
            <column name="version" type="bigint(21) unsigned" />
        </createTable>
    </changeSet>
    <changeSet id="changelog-user-0.3.0_sysServiceEventHousekeeping_seed"
        author="eurotech">
        <!-- Seed values -->
        <insert tableName="sys_service_event_housekeeping">
            <column name="service" value="accessinfo" />
            <column name="last_run_on" valueComputed="${now}" />
            <column name="version" value="1" />
        </insert>
        <insert tableName="sys_service_event_housekeeping">
            <column name="service" value="role" />
            <column name="last_run_on" valueComputed="${now}" />
            <column name="version" value="1" />
        </insert>
        <insert tableName="sys_service_event_housekeeping">
            <column name="service" value="group" />
            <column name="last_run_on" valueComputed="${now}" />
            <column name="version" value="1" />
        </insert>
        <insert tableName="sys_service_event_housekeeping">
            <column name="service" value="domain" />
            <column name="last_run_on" valueComputed="${now}" />
            <column name="version" value="1" />
        </insert>
    </changeSet>
</databaseChangeLog>
